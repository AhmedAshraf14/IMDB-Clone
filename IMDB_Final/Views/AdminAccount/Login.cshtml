@model IMDB_Final.Models.Admin

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <Section class="main">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()






            <div class="title">
                <h2>Sign In</h2>
            </div>


            <div class="email">
                <b> @Html.LabelFor(model => model.AdminName, htmlAttributes: new { @class = "email" })</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AdminName, new { htmlAttributes = new { @class = "input", placeholder = "UserName" } })
                    @Html.ValidationMessageFor(model => model.AdminName, "", new { @class = "fontSign" })
                </div>
            </div>

            <div class="email">
                <b>  @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "email" })</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input", placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "fontSign" })
                </div>

            </div>

            <div class="SignInbtn">

                <button type="submit"> LogIn</button>

            </div>
            <div>
            @Html.ValidationSummary(true, "", new { @class = "fontSign" })
                </div>
            @Html.ValidationMessage("CustomError", new { @class = "fontSign" })




        }
        <p>New to IMDb</p>
        <div class="Createbtn">
            <a href="@Url.Action("Register", "User")">
                <button type="submit">Creat your new account</button>
            </a>
        </div>
    </Section>
  

    </body>
</html>